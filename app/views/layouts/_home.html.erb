<div id="banner" class="row">
	<div class="small-12 medium-12 large-12 columns">
		<div class="row">
			<div class="small-1 medium-1 large-1 columns"></div>
			<div class="small-11 medium-11 large-11 columns">
				<h1>The Adventures of Jan and Rocket</h1>
			</div>
		</div>
		<div class="row">
			<div class="small-1 medium-2 large-2 columns"></div>
			<div class="small-11 medium-10 large-10 columns">
				<span class="banner-link current-episode"><a href="#current">Current Episode: <%= Episode.last.title %></a></span>
			</div>
		</div>
		<div class="row">
			<div class="small-1 medium-2 large-2 columns"></div>
			<div class="small-11 medium-10 large-10 columns">
				<span class="banner-link archive"><%= link_to("Past Episodes", episodes_path) %></span>
			</div>
		</div>
	</div>
</div>
<div class="episode-container row">
	<div class="episode small-12 medium-12 large-12 columns">
		<a name="current"></a>
		<%= Episode.last.content.html_safe %>
	</div>
</div>

<%= yield %>
