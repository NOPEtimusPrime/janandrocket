<div class="page-header">
  <%= link_to 'New Episode', new_admin_episode_path, :class => 'btn btn-default pull-right' %>
  <h2>Episodes</h2>
</div>
<%= paginate @episodes, :theme => 'comfy' %>
<table class="table table-hover table-bordered">
  <tr>
    <th></th>
    <th class="main">Title</th>
    <th>Published?</th>
    <th></th>
  </tr>
  <% @episodes.each do |episode| %>
    <tr>
      <td>#<%= episode.id %></td>
      <td class="main"><%= episode.title %></td>
      <td>
        <%= episode.is_published %>
      </td>
      <td>
        <div class="btn-group btn-group-sm">
          <%= link_to 'Edit', edit_admin_episode_path(episode), :class => 'btn btn-default' %>
          <%= link_to 'Delete', admin_episode_path(episode), :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-danger' %>
        </div>
      </td>
    </tr>
  <% end %>
</table>
<%= paginate @episodes, :theme => 'comfy' %>
